CREATE TABLE IF NOT EXISTS {{ scylla_keyspace }}.employee_info (
    id text,
    name text,
    designation text,
    department text,
    joining_date date,
    address text,
    office_location text,
    status text,
    email text,
    phone_number text,
    PRIMARY KEY (id, joining_date)
) WITH CLUSTERING ORDER BY (joining_date DESC);

CREATE TABLE IF NOT EXISTS {{ scylla_keyspace }}.employee_salary (
    id text,
    process_date text,
    name text,
    salary float,
    status text,
    PRIMARY KEY (id, process_date)
) WITH CLUSTERING ORDER BY (process_date DESC);

